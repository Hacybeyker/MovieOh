<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:clipToPadding="true"
    android:focusable="true"
    android:paddingStart="@dimen/dp15"
    android:paddingTop="@dimen/dp15"
    android:paddingEnd="@dimen/dp15"
    android:paddingBottom="@dimen/dp15">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitleHeader"
        style="@style/text_header_section"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp5"
        app:layout_constraintEnd_toStartOf="@id/ivIconHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Similar Movies" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivIconHeader"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp0"
        android:tint="@color/philippine_gray"
        app:layout_constraintBottom_toBottomOf="@id/tvTitleHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTitleHeader"
        app:srcCompat="@drawable/icon_arrow_right" />

</androidx.constraintlayout.widget.ConstraintLayout>