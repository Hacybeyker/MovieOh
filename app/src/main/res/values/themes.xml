<resources>

    <style name="Theme.MovieOh" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.MovieOh.NoActionBar" parent="Theme.MovieOh">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="Shimmer">
        <item name="android:background">@color/black_tie</item>
    </style>

    <style name="Splash">
        <item name="android:background">@color/color_mariner</item>
    </style>
</resources>